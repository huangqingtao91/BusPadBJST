<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/yol3music_es" >

    <View
        android:id="@+id/view_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/music_lslamic_relativeLayout"
        android:layout_width="211dp"
        android:layout_height="100dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="160dp"
        android:layout_toLeftOf="@id/view_center"
        android:background="@mipmap/music_03" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:text="@string/music_text"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/music_oawali_relativeLayout"
        android:layout_width="211dp"
        android:layout_height="100dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="160dp"
        android:layout_toRightOf="@id/view_center"
        android:background="@mipmap/music_05" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:text="@string/music_text"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/music_jazz_relativeLayout"
        android:layout_width="211dp"
        android:layout_height="100dp"
        android:layout_below="@id/music_lslamic_relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@mipmap/music_12" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:text="@string/music_text"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/music_techno_relativeLayout"
        android:layout_width="211dp"
        android:layout_height="100dp"
        android:layout_below="@id/music_lslamic_relativeLayout"
        android:layout_marginRight="8dp"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@id/music_jazz_relativeLayout"
        android:background="@mipmap/music_10" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:text="@string/music_text"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/music_relax_relativeLayout"
        android:layout_width="211dp"
        android:layout_height="100dp"
        android:layout_below="@id/music_lslamic_relativeLayout"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/music_jazz_relativeLayout"
        android:background="@mipmap/music_14" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:text="@string/music_text"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/music_easy_relativeLayout"
        android:layout_width="211dp"
        android:layout_height="100dp"
        android:layout_below="@id/music_jazz_relativeLayout"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/view_center"
        android:background="@mipmap/music_20" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:text="@string/music_text"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/music_rap_relativeLayout"
        android:layout_width="211dp"
        android:layout_height="100dp"
        android:layout_below="@id/music_jazz_relativeLayout"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/view_center"
        android:background="@mipmap/music_22" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:text="@string/music_text"
            android:textColor="@android:color/white"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home_selector"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView3"/>
    </RelativeLayout>

</RelativeLayout>